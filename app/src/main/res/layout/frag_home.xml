<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal">

        <TextView
            android:id="@+id/view_home_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Username"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_home_progressFlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_home_username"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Daily Progress: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/view_home_progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_home_username"
            android:layout_toEndOf="@+id/view_home_progressFlv"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="5 / 10"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/view_home_currentQuestFlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_home_progressFlv"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Current Quest:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/view_home_currentQuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_home_currentQuestFlv"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/view_home_charImg"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/view_home_charImg"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_large"
        android:text="Current Plan"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_home_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>