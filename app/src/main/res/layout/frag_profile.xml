<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_profile_avatar"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:src="@drawable/ic_avatar"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/view_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_avatar"
        android:layout_alignStart="@+id/view_profile_avatar"
        android:layout_alignEnd="@+id/view_profile_avatar"
        android:layout_marginBottom="@dimen/spacing_large"
        android:gravity="center"
        android:text="Username"
        android:textSize="20sp"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/view_profile_dietFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/view_profile_avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Current diet"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/view_profile_dietCard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view_profile_dietFlv"
        android:layout_toEndOf="@+id/view_profile_avatar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large">

        <TextView
            android:id="@+id/view_profile_dietCard_dietName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:listPreferredItemHeight"
            android:gravity="center"
            android:text="Current Diet"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/view_profile_statsFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_username"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="Stats"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"/>

    <!-- Strength -->
    <TextView
        android:id="@+id/view_profile_strengthFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_statsFlv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Strength"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/view_profile_strengthScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_statsFlv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="0"
        android:textSize="22sp"/>

    <!-- Dexterity -->
    <TextView
        android:id="@+id/view_profile_dexterityFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_strengthFlv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Dexterity"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/view_profile_dexterityScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_strengthScore"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="0"
        android:textSize="22sp"/>

    <!-- Willpower -->
    <TextView
        android:id="@+id/view_profile_willpowerFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_dexterityFlv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Willpower"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/view_profile_willpowerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_dexterityScore"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="0"
        android:textSize="22sp"/>

    <!-- Agility -->
    <TextView
        android:id="@+id/view_profile_agilityFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_willpowerFlv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Agility"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/view_profile_agilityScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_willpowerScore"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="0"
        android:textSize="22sp"/>

    <!-- Luck -->
    <TextView
        android:id="@+id/view_profile_luckFlv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_agilityFlv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="Luck"
        android:textColor="@color/textPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/view_profile_luckScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_agilityScore"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:text="0"
        android:textSize="22sp"/>
</RelativeLayout>