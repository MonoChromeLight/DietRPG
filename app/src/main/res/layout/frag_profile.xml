<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_profile_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/view_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_profile_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_large"
        android:text="User name"
        android:textSize="30sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/view_profile_dietCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/spacing_normal"
        app:contentPadding="@dimen/spacing_large"
        android:layout_below="@+id/view_profile_username">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Current Diet"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/view_profile_dietCard_dietName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_large"
                android:text="Default"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>